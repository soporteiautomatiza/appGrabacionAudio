# Configuración de APIs
GEMINI_API_KEY=tu_clave_gemini_aqui
SUPABASE_URL=tu_url_supabase_aqui
SUPABASE_KEY=tu_clave_supabase_aqui

# Logging
LOG_LEVEL=INFO
# ============================================================================
# SEGURIDAD - RATE LIMITING (opcional)
# ============================================================================
# Máximo de llamadas a Gemini API por ventana de tiempo
RATE_LIMIT_CALLS=10

# Ventana de tiempo en segundos para el rate limit
RATE_LIMIT_WINDOW=60

# Tokens disponibles en el bucket (para algoritmo token-bucket)
RATE_LIMIT_TOKENS=100

# ============================================================================
# SEGURIDAD - LIMITACIONES DE ENTRADA (opcional)
# ============================================================================
# Longitud máxima de nombre de archivo
MAX_FILENAME_LENGTH=255

# Longitud máxima de palabra clave
MAX_KEYWORD_LENGTH=100

# Longitud máxima de búsqueda
MAX_SEARCH_LENGTH=200

# Longitud máxima de texto de transcripción
