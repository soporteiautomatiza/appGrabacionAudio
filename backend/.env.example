# Environment variables - Copy this to .env and fill with your values

# ============ APLICACION ============
ENVIRONMENT=development
DEBUG=false
APP_NAME=iPrevencion API
APP_VERSION=1.0.0

# ============ BASE DE DATOS ============
# Formato: postgresql://username:password@host:port/database
# Para desarrollo local:
DATABASE_URL=postgresql://postgres:password@localhost:5432/iprevencion
# Para Render/Railway:
# DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# ============ SEGURIDAD JWT ============
# Genera una clave segura: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ GOOGLE GEMINI API ============
# Obtén tu API key en: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ============ ALMACENAMIENTO DE ARCHIVOS ============
# Directorio local para almacenar audios
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=100
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,flac,webm,ogg

# ============ CORS ============
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,*

# ============ AUDITORÍA ============
ENABLE_AUDIT_LOG=true
